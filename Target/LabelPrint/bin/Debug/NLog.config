<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="logDirectory" value="C:\GPLLogRecord\${date:format=yyyyMM}\${date:format=yyyyMMdd}\Lpr"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
	<targets async="true">

    <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->

    <!--
    Write events to a file with the date in the filename.
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    -->
    <target name="AkkaLog"
       xsi:type="File"
       fileName="${logDirectory}/AkkaLog.log"
       archiveFileName="${logDirectory}/AkkaLog.{#}.log"
       archiveNumbering="DateAndSequence"
       archiveAboveSize="1000000"
       archiveDateFormat="yyyyMMdd"
	   encoding="utf-8"
       archiveEvery="Day"
    />
    <target name="LprMgrLog"
            xsi:type="File"
            fileName="${logDirectory}/LprMgrLog.log"
            archiveFileName="${logDirectory}/LprMgrLog.{#}.log"
            archiveNumbering="DateAndSequence"
            archiveAboveSize="1000000"
			encoding="utf-8"
            archiveDateFormat="yyyyMMdd"
		    archiveEvery="Day"					
    />

	  <target name="LprSndEditLog"
            xsi:type="File"
            fileName="${logDirectory}/LprSndEditLog.log"
            archiveFileName="${logDirectory}/LprSndEditLog.{#}.log"
            archiveNumbering="DateAndSequence"
            archiveAboveSize="1000000"
			  encoding="utf-8"
			archiveDateFormat="yyyyMMdd"
            archiveEvery="Day"
    />

		<target name="LprSndLog"
			  xsi:type="File"
			  fileName="${logDirectory}/LprSndLog.log"
			  archiveFileName="${logDirectory}/LprSndLog.{#}.log"
			  archiveNumbering="DateAndSequence"
			  archiveAboveSize="1000000"
				encoding="utf-8"
			  archiveDateFormat="yyyyMMdd"
			  archiveEvery="Day"
    />	
		
  </targets>

	<targets async="true">
		<target name="RichTextBox"
				xsi:type="RichTextBox"
				controlName="RichTextBoxConsole"
				formName="LprForm"
				useDefaultRowColoringRules="true"
				autoScroll="true"
				maxLines="100"
				layout="${longdate}-${level} ${message} ${onexception:||${exception}||${stacktrace}}"
    />
	</targets>

	<rules>
    <!-- add your logging rules here -->

    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
  
    <logger name="LprMgrLog" minlevel="Debug" writeTo="LprMgrLog"/>
	<logger name="LprSndEditLog" minlevel="Debug" writeTo="LprSndEditLog" />
	<logger name="LprSndLog" minlevel="Debug" writeTo="LprSndLog" />

    <logger name="LprSndLog" minlevel="Info" writeTo="RichTextBox" />	
	<logger name="LprMgrLog" minlevel="Info" writeTo="RichTextBox" />
	<logger name="LprSndEditLog" minlevel="Info" writeTo="RichTextBox" />

		<logger name="*" minlevel="Debug" writeTo="AkkaLog" final="true"/>
  </rules>
</nlog>
