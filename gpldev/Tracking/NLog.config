<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="logDirectory" value="C:\GPLLogRecord\${date:format=yyyyMM}\${date:format=yyyyMMdd}\Tracking"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
	<targets async="true">

    <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->

    <!--
    Write events to a file with the date in the filename.
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    -->
    <target name="AkkaLog"
      xsi:type="File"
      fileName="${logDirectory}/AkkaLog.log"
      archiveFileName="${logDirectory}/AkkaLog.{#}.log"
      archiveNumbering="DateAndSequence"
      archiveAboveSize="1000000"
	    encoding="utf-8"
      archiveDateFormat="yyyyMMdd"
      archiveEvery="Day"
    />
    <target name="TrkMgrLog"
            xsi:type="File"
            fileName="${logDirectory}/TrkMgrLog.log"
            archiveFileName="$${logDirectory}/TrkMgrLog.{#}.log"
            archiveNumbering="DateAndSequence"
            archiveAboveSize="1000000"
			      encoding="utf-8"
            archiveDateFormat="yyyyMMdd"
            archiveEvery="Day"
    />

    <target name="TrkScanLog"
		   xsi:type="File"
		   fileName="${logDirectory}/TrkScanLog.log"
		   archiveFileName="$${logDirectory}/TrkScanLog.{#}.log"
		   archiveNumbering="DateAndSequence"
		   archiveAboveSize="1000000"
			 encoding="utf-8"
		   archiveDateFormat="yyyyMMdd"
		   archiveEvery="Day"
    />
		
  </targets>


	<targets async="true">
		<target name="RichTextBox"
				xsi:type="RichTextBox"
				controlName="RichTextBoxConsole"
				formName="TrkForm"				
				useDefaultRowColoringRules="true"
				autoScroll="true"
				maxLines="100"
				layout="${longdate}-${level} ${message} ${onexception:||${exception}||${stacktrace}}"
    />
	</targets>

	<rules>
    <!-- add your logging rules here -->

    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
		<logger name="TrkMgrLog" minlevel="Info" writeTo="RichTextBox" />
		<!--<logger name="TrkScanLog" minlevel="Info" writeTo="RichTextBox" />-->
    <logger name="TrkScanLog" minlevel="Debug" writeTo="TrkScanLog"/>
    <logger name="TrkScanLog" minlevel="Debug" writeTo="RichTextBox"/>
    <logger name="TrkMgrLog" minlevel="Debug" writeTo="TrkMgrLog" final="true"/>

    <logger name="*" minlevel="Debug" writeTo="AkkaLog" />
  </rules>
</nlog>
